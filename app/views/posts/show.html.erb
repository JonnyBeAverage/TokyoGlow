<div class="container my-5 py-5">
  <h1><%= @post.title %></h1>
  <div>
      <div>
        <small>
          <strong><%= @post.user.username %></strong>
          <i><%= @post.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= @post.content %></p>
        <p><%= @post.category %></p>

        <div class="back-button-wrapper mt-1"> <%= link_to "Back", posts_path %></div>
        <div class="delete-button-wrapper mt-1"> <%= button_to "Destroy this post", @post, method: :delete if policy(@post).destroy? %></div>
      </div>
  </div>
</div>
