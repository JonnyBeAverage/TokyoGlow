<div class="container my-5 py-5">
  <h1><%= @post.title %></h1>
  <div>
      <div>
        <small>
          <strong><%= @post.user.username %></strong>
          <i><%= @post.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= @post.content %></p>
        <p><%= @post.category %></p>

        <%= link_to "Back", posts_path, class: "btn btn-primary" %>
        <% if policy(@post).destroy? %>
          <%= link_to "Delete post", post_path(@post), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
        <% end %>
      </div>
  </div>
</div>
