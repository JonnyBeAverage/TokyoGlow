<div class="container">
  <h1><%= @post.title %></h1>

  <div>
      <div>
        <small>
          <strong><%= @post.user.username %></strong>
          <i><%= @post.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= @post.content %></p>
        <p><%= @post.category %></p>

        <%= link_to "Back", posts_path, class: "btn btn-primary" %>
      </div>
  </div>
</div>
