<div class="container py-5 my-5">
  <div class="container">
    <%= simple_form_for(@post) do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :category, collection: ["General", "Food and Nutrition", "First Child", "Medical", "Event", "Recommendations", "Playdates"] %>
    <%= f.submit %>
    <% end %>
    <%= link_to "Return to Posts", posts_path, class: "btn btn-success w-100 my-2 " %>
  </div>
</div>
