<div class="container py-5 mb-5">

  <div class="row justify-content-center">
    <div class="col-sm-8 mx-2">

      <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
          <%= link_to "Public", posts_path, class:"nav-link active btn btn-primary", style:"background-color:;" %>
        </li>
        <li class="nav-item">
          <%= link_to "Private", posts_path, class:"nav-link", style:"color:#8064A2;" %>
        </li>
      </ul>

      <div class="col-sm-8 my-3">
        <%= form_with url: posts_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Search for categories, keywords..."
            %>
          <%= submit_tag "Search", name: "", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class = "d-flex justify-content-center py-3">
    <%= link_to "Add a new post", new_post_path, class: "btn-submit" %>
  </div>
  <hr/>

  <div>
    <% @posts.each do |post| %>
      <div>
        <small>
          <strong><%= post.user.username %></strong>
          <i><%= post.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= post.title %></p>
        <p>Category: <%= post.category %></p>

        <div class = "d-flex justify-content-center">
          <%= link_to "See details and replies", post_path(post), class: "btn btn-primary" %>
        </div>
        <hr/>
      </div>
    <% end %>
  </div>
</div>
