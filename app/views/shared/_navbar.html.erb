<div class="d-flex justify-content-around">
  <% if user_signed_in? %>
    <%# user/sing out %>
    <%= link_to destroy_user_session_path, method: :delete do %>
      <div class="icon-border p-4">
        <i class="fa-solid fa-user fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>
    <%# chat %>
    <%= link_to root_path do %>
      <div class="icon-border p-4">
        <i class="fa-solid fa-comment fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>
    <%# home/post %>
    <%= link_to posts_path do %>
        <div class="icon-border p-4">
          <i class="fa-solid fa-house fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>
    <%# hospitals %>
    <%= link_to hospitals_path do %>
      <div class="icon-border p-4">
        <i class="fa-solid fa-hospital fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>
    <%# calendar %>
    <%= link_to root_path do %>
      <div class="icon-border p-4">
        <i class="fa-solid fa-calendar-days fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>

  <% else %>
    <%# user/login %>
    <%= link_to new_user_session_path do %>
      <div class="icon-border p-4">
        <i class="fa-solid fa-user fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>
    <%# home/post %>
    <%= link_to posts_path do %>
      <div class="icon-border p-4">
        <i class="fa-solid fa-house fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>
    <%# hospitals %>
    <%= link_to hospitals_path do %>
      <div class="icon-border p-4">
        <i class="fa-solid fa-hospital fa-xl" style="color: #004444;"></i>
      </div>
    <% end %>

  <% end %>
</div>