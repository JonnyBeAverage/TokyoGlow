<div class="d-flex">
  <% if request.path == "/" %> 
    <h1>TokyoGlow</h1>
  <% else %>
    <div class="d-flex justify-content-start">
      <%= link_to :back do %>
        <i class="fa-solid fa-chevron-left fa-xl" style="color: #004444;"></i>
      <% end %>
    </div>
    <div>
      <% if request.path.include? "calendar" %>
        <h1><%= current_user.username %>`s calendar</h1>
      <% elsif request.path.include? "user" %> 
        <h1>Profile</h1>
      <% else %>
        <h1><%= request.path.split(/\W+/)[1].to_s.capitalize %></h1>
      <% end %>
    </div>
  <% end %>
</div>