<h1 class="text-center">Make an event</h1>

<div class="d-flex flex-row justify-content-center">
  <div class="p-3 ">
    <%= simple_form_for [@event] do |f| %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :date %>
      <%= f.input :location %>
      <%= f.input :time, as: :select, collection: @time_options, input_html: { prompt: "Select a time" } %>
      <%= f.input :photo, as: :file, input_html: { multiple: false } %>
      <div class= "d-flex justify-content-center py-3">
        <%= f.submit "Create your event", class: "btn-submit" %>
      </div>
    <% end %>
  </div>
</div>
