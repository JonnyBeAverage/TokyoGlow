<div class="p-3">
  <div class="row justify-content-center p-4"> <!-- Center the entire card-container -->
    <div class="card-container">
      <h1 class="pt-4 text-center"><%= @event.title %></h1>
      <div class="d-flex justify-content-center"> <!-- Center the image -->
        <%= cl_image_tag @event.photo.key, :crop => :fill, class: "img-container rounded-3" %>
      </div>
    </div> <!-- Close the card-container div -->
    <div class="card text-center"> <!-- Center the card content -->
      <h3><%= @event.content %></h3>
      <p><i class="fa-solid fa-location-dot"></i> <%= @event.location %></p>
      <p><i class="fa-regular fa-clock"></i> <%= @event.date.strftime('%B %d') %> at <%= @event.time.strftime('%H:%M') %> JST</p>
      <p>Hosted by <%= @event.user.username %></p>
      <p>
        <i class="fa-solid fa-circle-check"></i>
        <% attending = @event.attendants %>
        <% all = attending.count + 1 %>
        <%= all %> going
      </p>
    </div>
  </div>



