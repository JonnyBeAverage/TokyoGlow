
<div class="py-5 mb-5">
  <div class="py-4 mb-2 text-center">
    <h1> Upcoming events </h1>
 </div>

  <div class="row justify-content-center m-2">
    <div class="col-sm-8 my-3">
      <%= form_with url: events_path, method: :get, class: "d-flex my-3" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "park, ice cream, yoga"
        %>
        <%= submit_tag "Search", name: "", class: "btn btn-success" %>
      <% end %>
    </div>

  <div class="d-flex justify-content-center">
    <% if policy(Event).new?%>
      <%= link_to "Make an event", new_event_path, class: "btn-submit" %>
    <% end %>
  </div>

<div class="py-3 my-3">
  <% @events.each do |event| %>
    <div class="container">
      <div class="card">
        <%= cl_image_tag event.photo.key %>
        <div class="card-container">
          <h3><%= event.title %>: <%= event.content %></h3>
          <p>Hosted by: <%= event.user.username %></p>
          <p>
            <i class="fa-solid fa-calendar-days"></i>
            <%= event.date.strftime('%B %d') %> at <%= event.time.strftime('%H:%M') %> JST
          </p>
          <p>
            <i class="fa-solid fa-circle-check"></i>
            <%# <% attendees = event.attendees_count %>

            <%# if attendees > 0%>
              <%#= attendees %>
            <%# end %>
          </p>
          <p class = "d-flex justify-content-center">
            <%= link_to "See more", event_path(id: event.id), class: "btn btn-primary" %>
          </p>

        </div>
      </div>
    <% end %>
  </div>
</div>
