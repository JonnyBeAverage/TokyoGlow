<div class="py-3 my-3">
  <center>
    <h1>Upcoming events</h1>
  </center>
</div>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: events_path, method: :get, class: "d-flex m-1 p-2" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for location, event, host"
      %>
      <%= submit_tag "Search", name: "", class: "btn btn-success" %>
    <% end %>
  </div> <!-- This is the correct closing tag for the div -->

  <div class="d-flex justify-content-center">
    <% if policy(Event).new? %>
      <%= link_to "Add an event", new_event_path, class: "btn-submit" %>
    <% end %>
  </div>
</div>

<div class="py-3 my-3">
  <% @events.each do |event| %>
    <div class="container">
      <div class="card">
        <%= cl_image_tag event.photo.key %>
        <div class="card-container">
          <h3><%= event.title %>: <%= event.content %></h3>
          <p>Hosted by: <%= event.user.username %></p>
          <p>
            <i class="fa-solid fa-calendar-days"></i>
            <%= event.date.strftime('%B %d') %> at <%= event.time.strftime('%H:%M') %> JST
          </p>
          <p>
            <i class="fa-solid fa-circle-check"></i>
            <%# <% attendees = event.attendees_count %>

            <%# if attendees > 0%>
              <%#= attendees %>
            <%# end %>
          </p>
          <p class = "d-flex justify-content-center">
            <%= link_to "See more", event_path(id: event.id), class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
