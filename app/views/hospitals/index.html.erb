<%# <div class="fixed-top d-flex justify-content-center p-2 banner">
  <%= render "shared/banner"%>
<%# </div> %>
<div class="my-3">
  <div class="row justify-content-center mx-1">
    <div class="col-sm-8 my-3">
      <%= form_with url: hospitals_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search for hospitals, services, locations"
        %>
        <%= submit_tag "Search", name: "", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <% @hospitals.each do |hospital| %>
    <%= link_to hospital_path(hospital) do %>
      <div class="container">
        <div class="card ">
          <%= image_tag hospital.default_image %>
          <div class="card-container">
            <div class="hospital-header">
              <h2><%= hospital.name %></h2>
              <span style="color:  rgb(0, 68, 68);"><%= hospital.average_rating %><i class="fa-solid fa-star" style="color: gold;"></i></span>
            </div>
            <div class="hospital-header">
              <h3><%=hospital.address %></h3>
              <%#= link_to "View hospital", hospital_path(hospital), class: "btn btn-primary py-1 my-1" %>
            </div>
            <%#h5>
              <%= hospital.services %>
            <%# </h5> %>
            <div class="card-border">
              <p class="mt-3"><%= hospital.description.length > 170 ? "#{hospital.description.first(170)}..." : hospital.description %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
