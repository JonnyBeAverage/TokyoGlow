<div>
<h1>List of Hospitals</h1>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: events_path, method: :get, class: "d-flex my-3" do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "hospital"
        %>
      <%= submit_tag "Search", name: "", class: "btn-hire" %>
    <% end %>
    </div>
  </div>
</div>

<% @hospitals.each do |hospital| %>
  <div class="container">
    <div class="card">
      <%= image_tag hospital.default_image %>
      <div class="card-container">
        <div class="hospital-header">
        <h2>
          <%= hospital.name %>
        </h2>
          <span>
            <%= hospital.average_rating %>
            <i class="fa-solid fa-star" style="color: gold;"></i>
          </span>
        </div>
        <h3>
          <%=hospital.address %>
        </h3>
        <%#h5>
          <%= hospital.services %>
        <%# </h5> %>
        <div class="card-border">
          <p class="<%= hospital.description.length > 100 ? 'hospital-description' : '' %>">
            <%= hospital.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
